<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#"><img src="~/Content/img/L1.png" title="logo" alt="logo" height="45" width="55" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink(" Home ", "Index", "Home")
                </li>

                <li class="nav-item">
                    @Html.ActionLink(" About ", "About", "Home")
                </li>

                <li class="nav-item">
                    @Html.ActionLink(" Contact ", "Contact", "Home")
                </li>

                <li class="nav-item">
                    @Html.ActionLink(" Join ", "Index", "Join")
                </li>

                <li class="nav-item">
                    @Html.ActionLink(" Admin ", "Index", "Admin")
                </li>

                <li class="nav-item">
                    @Html.ActionLink(" Users ", "Users", "Admin")
                </li>

                @*<li class="nav-item">
            @Html.ActionLink(" Profile ", "Index", "Profile")
        </li>*@


                @{
                    if (Session["user"] == null)
                    {
                        <li class="nav-item">
                            <!--TODO: This should become a browse page link perhaps?-->
                            @Html.ActionLink("Profile", "Index", "Profile")
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-item dropdown-toggle" href="#" id="navbarProfileDropDownLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Profile
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarProfileDropDownLink">
                                @Html.ActionLink(" Edit Profile ", "Edit", "Profile",null, new { @class ="myactionlink dropdown-item"})
                                @Html.ActionLink(" Add Gallery ", "GalleryAdd", "Profile",null, new { @class="myactionlink dropdown-item"})
                                @Html.ActionLink(" Upload Artwork ", "AddArtwork", "Profile",null,new { @class="myactionlink dropdown-item"})
                                <a class="dropdown-item" href="#">Upload Image</a>
                            </div>
                        </li>
                    }
                }


                <li>
                    @{
                        if (Session["user"] == null)
                        {
                            @Html.ActionLink("Login", "../Login/Login")
                        }
                        else
                        {
                            @Html.ActionLink("Logout", "../Login/Logout")
                        }
                    }
                </li>
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
        
        <footer>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink(" Home ", "Index", "Home")
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink(" Join ", "Index", "Join")
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink(" Contact Us", "Contact", "Home")
                        </li>


                        <li>
                            @{
                                if (Session["user"] == null)
                                {
                                    @Html.ActionLink("Login", "../Login/Login")
                                }
                                else
                                {
                                    @Html.ActionLink("Logout", "../Login/Logout")
                                }
                            }
                        </li>

                        <li class="nav-item">
                            <a href="https://www.facebook.com/octo.net8"><img src="~/Content/img/facebooklogo.png" title="logo" alt="logo" height="30" width="40" /></a>
                        </li>


                    </ul>


                </div>
                <p class="pt-2">&copy; @DateTime.Now.Year - Octo.Net</p>
            </nav>



        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
