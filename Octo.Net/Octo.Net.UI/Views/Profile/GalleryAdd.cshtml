@model Octo.Net.UI.ViewModels.UserGalleryArtworkFile

@{
    ViewBag.Title = "GalleryAdd";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h2>Add Gallery</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 offset-sm-1">
        <h3>@Model.User.UserName</h3>
        @using (Html.BeginForm())
        {
            Gallery gallery = new Gallery();

            <form>
                <div class="form-group">
                    @Html.LabelFor(model => gallery.GalleryName, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="form-row col-md-10">
                        @Html.EditorFor(model => gallery.GalleryName, new { htmlAttributes = new { @class = "form-control col-md-4" } })
                    </div>
                    @Html.LabelFor(model => gallery.GalleryDescription, htmlAttributes: new { @class ="control-label col-md-4"})
                    <div class="form-row col-md-10">
                        @Html.EditorFor(model=> gallery.GalleryDescription, new { htmlAttributes = new { @class = "form-control col-md-4" } })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Gallery" class="btn btn-primary btn-lg" />
                </div>
            </form>
        }
    </div>
</div>

