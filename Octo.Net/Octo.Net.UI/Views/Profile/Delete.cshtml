@model Octo.Net.UI.ViewModels.UserGalleryArtworkFile

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

    <div class="container pt-5">
        <div class="flex-row">
            <h3>Are you sure you want to delete @Html.DisplayFor(model => model.File.Artwork.Title)?</h3>
            <hr />
            @Html.Raw(ViewBag.Message)
            <div>
                @using (Html.BeginForm())
                {
                    <form>
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.File.Artwork.Id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.File.Artwork.Id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
