@model Octo.Net.UI.ViewModels.UserGalleryArtworkFile

@{
    ViewBag.Title = "AddToGallery";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <h2></h2>
    </div>
</div>
<!--using (Html.BeginForm("AddToGallery", "Profile", null, FormMethod.Post, new { enctype = "multipart/form-data" }))-->
@using (Html.BeginForm())
{
    <form>
        <div class="form-horizontal">
            <h4>Add to Gallery</h4>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Artworks[0].Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Artworks[0].Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Artworks[0].Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Artworks[0].Price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Artworks[0].Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Artworks[0].Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Choose Artwork", new { @class = "control-label col-md-4" })
                <div class="col-sm-10">
                    <input type="file" id="Artwork" name="upload" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Artwork" class="btn btn-primary btn-lg" />
                </div>
            </div>

        </div>
    </form>
}

