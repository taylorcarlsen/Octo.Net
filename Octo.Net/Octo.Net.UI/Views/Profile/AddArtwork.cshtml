@model Octo.Net.UI.ViewModels.UserGalleryArtworkFile

@{
    ViewBag.Title = "AddArtwork";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
    <div class="row">
        <div class="col-sm-11 offset-sm-1">
            <h2>Add Artwork</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 offset-sm-1">
            <table class="table table-striped table-responsive">
                <tr>
                    <th>ID</th>
                    <th>Gallery Name</th>
                    <th>Gallery Descriptions</th>
                    <th>Actions</th>
                </tr>
                @foreach (var item in Model.Galleries)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GalleryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GalleryDescription)
                    </td>
                    <td>
                        @Html.ActionLink(" Add Artwork ", "AddToGallery", "Profile", new { id = item.Id }, htmlAttributes: null) | Edit Gallery | Delete Gallery
                    </td>
                </tr>
                }
            </table>

        </div>
    </div>

